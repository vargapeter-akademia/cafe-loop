  <display-name>cafe-loop</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>RegistrationServlet</servlet-name>
  	<servlet-class>hu.ak.generics.cafeloop.servlet.RegistrationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>RegistrationServlet</servlet-name>
